@model TEB.Core.ViewModel.CategoryViewModel

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "category-form" }))
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Edit- @Model.Name
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("BackToList", "Category")</small>
        </h1>
        <div class="pull-right">
            @*<button type="button" onclick="javascript:OpenWindow('@Url.RouteUrl("Category", new {SeName = Model.SeName})', 800, 600, true); return false;" class="btn bg-purple">
                <i class="fa fa-eye"></i>
                @T("Admin.Common.Preview")
            </button>*@
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
               Save
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                SaveContinue
            </button>
            <span id="category-delete" class="btn bg-red" data-toggle="modal" data-target="#categorymodel-delete-confirmation">
                <i class="fa fa-trash-o"></i>
                Delete
            </span>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}

<div id='category-delete-confirmation' class="modal fade" tabindex="-1" role="dialog" aria-labelledby="category-delete-confirmation-title">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="category-delete-confirmation-title">Are you sure?</h4>
            </div>
            <form action="@Url.Action("Delete","Category",new { id = Model.Id })" method="post">
                <div class="form-horizontal">
                    <div class="modal-body">
                        Are you sure you want to delete this item?
                    </div>
                    <div class="modal-footer">
                        <span class="btn btn-default" data-dismiss="modal">No, cancel</span>
                        <button type="submit" class="btn btn-primary pull-right">
                            Delete
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
<script>
    $(document).ready(function () {
        $('#category-delete').attr("data-toggle", "modal").attr("data-target", "#category-delete-confirmation")
    });
</script>

